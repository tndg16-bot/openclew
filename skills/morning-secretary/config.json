{
  "schedule": {
    "enabled": true,
    "cron": "0 7 * * *",
    "time": "07:00",
    "timezone": "Asia/Tokyo",
    "description": "毎朝7時に自動実行"
  },
  "discord": {
    "channelId": null,
    "webhookUrl": null,
    "enabled": true
  },
  "googleCalendar": {
    "credentialsPath": "../google-calendar/credentials/credentials.json",
    "tokenPath": "../google-calendar/credentials/token.json",
    "enabled": true,
    "scope": ["https://www.googleapis.com/auth/calendar", "https://www.googleapis.com/auth/calendar.events"]
  },
  "weather": {
    "apiKey": null,
    "location": "Tokyo",
    "enabled": true,
    "units": "metric"
  },
  "gmail": {
    "maxResults": 10,
    "summarizeLength": 3,
    "excludeLabels": ["Spam", "Promotions", "Social"],
    "minImportance": "high"
  },
  "calendar": {
    "includeAllDay": true,
    "includeCancelled": false,
    "timezone": "Asia/Tokyo"
  },
  "notifications": {
    "channels": ["discord"],
    "fallbackChannel": null,
    "voice": false,
    "voiceProvider": "openai-tts"
  },
  "summary": {
    "maxEmailLength": 100,
    "maxEventLength": 50,
    "includeAiComment": true,
    "suggestTasks": true
  }
}
